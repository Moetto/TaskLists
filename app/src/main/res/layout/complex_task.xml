<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/right_end"
        android:layout_alignParentEnd="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_more"
        android:layout_toStartOf="@id/right_end"
        android:layout_marginLeft="@dimen/complex_task_button_margin"/>

    <ImageButton
        android:id="@+id/complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="26dp"
        android:maxWidth="26dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_toStartOf="@id/edit_button"
        android:src="@drawable/check"
        android:background="@android:color/transparent"
        android:paddingTop="3dp"
        android:layout_marginLeft="@dimen/complex_task_button_margin"/>

    <ImageButton
        android:id="@+id/claim_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/complete_button"
        android:background="@android:drawable/ic_input_add"
        android:layout_marginLeft="@dimen/complex_task_button_margin"/>

    <TextView
        android:id="@+id/complex_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/claim_button"
        android:layout_centerVertical="true" />

</RelativeLayout>