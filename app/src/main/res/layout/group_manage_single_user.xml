<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/managegroup_user_marginbottomtop"
    android:layout_marginTop="@dimen/managegroup_user_marginbottomtop">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_avatar"/>
        <TextView
            android:layout_marginLeft="@dimen/complex_task_button_margin"
            android:layout_toEndOf="@id/user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/user_name"/>
        <CheckBox
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:id="@+id/user_checkbox"/>

</RelativeLayout>